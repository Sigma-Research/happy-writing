/* miniprogram/pages/course/course.wxss */
.container {
  color: #192e4d;
}
.container .noCourse {
  font-size: 12px;
  text-align: center;
  padding: 40rpx;
}
.container .enrolled {
  width: 710rpx;
}
.container .enrolled .enrolled-course {
  width: 710rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #b3c7e6;
  border-radius: 10rpx;
}
.container .enrolled .enrolled-course .course-title {
  font-weight: bold;
}
.container .enrolled .enrolled-course .course-date {
  font-size: 14px;
  margin: 20rpx 0;
  color: #2d5186;
}
.container .enrolled .enrolled-course .course-lecturer {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 105rpx;
}
.container .enrolled .enrolled-course .course-lecturer .lecturer-avatar {
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
  border: #2d5186 1px solid;
  margin: 0 20rpx;
}
.container .enrolled .enrolled-course .course-lecturer .lecturer-info {
  font-size: 14px;
  color: #2d5386;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 85rpx;
}
.container .enrolled .enrolled-course .course-progress {
  font-size: 12px;
  color: #fff;
  margin-top: 10rpx;
}
.container .unregistered {
  width: 710rpx;
}
.container .unregistered .unregistered-course {
  width: 710rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.container .unregistered .unregistered-course .course-image {
  width: 175rpx;
  height: 200rpx;
  background-color: #192e4d;
  margin-right: 30rpx;
}
.container .unregistered .unregistered-course .course-title {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 200rpx;
  flex: 1;
}
.container .unregistered .unregistered-course .course-title .course-subtitle {
  font-size: 14px;
  color: #2d5186;
}
.container .unregistered .unregistered-course .course-button {
  padding: 20rpx;
  background-color: #799ed2;
  border-radius: 5px;
  color: #fff;
}

