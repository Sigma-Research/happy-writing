<!--miniprogram/pages/profile/profile.wxml-->
<view class="container">
    <view class="profile">
        <button open-type="getUserInfo"
                bindgetuserinfo="onGetUserInfo"
                style="background-image: url({{avatarUrl}})"
                size="default"
                class="avatar"></button>
        <view class="name">{{userInfo ? userInfo.nickName : '点击头像登录'}}
            <image class="modify" wx:if="{{userInfo}}">

            </image>
        </view>
        <view class="grade">二年级二年级</view>
        <view class="record">
            <view class="item">
                <view><view class="highlight">5</view>/次</view>
                <view>完成作业</view>
            </view>
            <view class="item">
                <view><view class="highlight">5</view>/次</view>
                <view>上墙</view>
            </view>
            <view class="item">
                <view><view class="highlight">2830</view>个</view>
                <view>获赞</view>
            </view>
        </view>
    </view>
    <view class="link" bindtap="toPortfolio">
        <image class="icon"></image>
        <view class="title">我的作品集</view>
        <image class="skip"></image>
    </view>
    <view class="link">
        <image class="icon"></image>
        <view class="title">自由练习</view>
        <image class="skip"></image>
    </view>
    <view class="link">
        <image class="icon"></image>
        <view class="title">关于我们</view>
        <image class="skip"></image>
    </view>
</view>
