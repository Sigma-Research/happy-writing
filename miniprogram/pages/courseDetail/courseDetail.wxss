  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
  background-color: #b3c7e6;
}
.container .course .course-section .section-startButton {
  font-size: 14px;
  padding: 20rpx;
  background-color: #2d5186;
  color: #fff;
  border-radius: 15rpx;
}
.container .course .course-section .disabled {
  background-color: #b3c7e6;
}

