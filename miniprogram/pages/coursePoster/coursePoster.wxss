/* miniprogram/pages/courseDetail/courseDetail.sass */
.container .poster {
  width: 750rpx;
  height: 1500rpx;
  background-image: linear-gradient(#799ed2, #2d5186);
}
.container .footer {
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  font-size: 14px;
}
.container .signUpButton {
  height: 181rpx;
}
.container .signUpButton .hint {
  text-align: center;
  font-weight: bold;
}
.container .signUpButton .table-button {
  height: 60rpx;
  line-height: 60rpx;
  background-color: #2d5386;
  font-size: 13px;
  color: #fff;
  font-weight: normal;
}
.container .signUpForm {
  height: 33vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .signUpForm .form-title {
  font-size: 18px;
  font-weight: bold;
}
.container .signUpForm .form-input {
  background-color: #fff;
  border: 1px #192e4d solid;
  border-radius: 5px;
  text-align: center;
  height: 30px;
}
.container .signUpForm .wrapper {
  width: 70%;
  display: flex;
  flex-direction: row;
}
.container .signUpForm .wrapper .confirmButton {
  height: 30px;
  background-color: #2d5386;
  font-size: 13px;
  line-height: 30px;
  color: #fff;
}
.container .signUpForm .signUpButton {
  background-color: #2d5386;
  font-size: 14px;
  height: 30px;
  color: #fff;
  width: 40vw;
  line-height: 30px;
}
.container .signUpForm .close {
  position: absolute;
  right: 10px;
  top: 4px;
  font-size: 20px;
  font-weight: bold;
  padding: 20rpx;
}

