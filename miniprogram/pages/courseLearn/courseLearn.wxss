/* miniprogram/pages/courseLearn/courseLearn.wxss */
.container {
  align-items: center;
}
.container .course {
  width: 660rpx;
  display: flex;
  flex-direction: column;
  margin-top: 32rpx;
  border-bottom: 1rpx solid #E6E4E1;
}
.container .course .infoCard {
  height: 342rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 20rpx 40rpx -8rpx #00000010;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}
.container .course .infoCard .title {
  color: #1A1918;
  font-size: 40rpx;
  font-weight: bold;
}
.container .course .infoCard .date, .container .course .infoCard .statistics {
  color: #999896;
  font-size: 24rpx;
}
.container .course .infoCard .lecturerWrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .course .infoCard .lecturerWrapper .lecturer {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .course .infoCard .lecturerWrapper .lecturer .avatar {
  width: 64rpx;
  height: 64rpx;
  background-color: #b3c7e6;
  border-radius: 50rpx;
}
.container .course .infoCard .lecturerWrapper .lecturer .name {
  height: 72rpx;
  margin: 0 16rpx;
  font-size: 24rpx;
  color: #999896;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.container .course .infoCard .lecturerWrapper .lecturer .name .highlight {
  color: #1A1918;
}
.container .course .course-section {
  margin-bottom: 16rpx;
}
.container .course .course-section .title {
  font-size: 32rpx;
  font-weight: bolder;
  margin-bottom: 16rpx;
}
.container .course .course-section .title .subtitle {
  font-size: 24rpx;
  font-weight: normal;
  color: #CCCBC8;
  display: inline;
}
.container .course .course-section .videoWrapper {
  white-space: nowrap;
}
.container .course .course-section .videoWrapper .video {
  position: relative;
  display: inline-block;
  margin-bottom: 32rpx;
  margin-right: 16rpx;
}
.container .course .course-section .videoWrapper .video .image {
  border-radius: 20rpx;
  background-color: #b3c7e6;
  width: 260rpx;
  height: 154rpx;
}
.container .course .course-section .videoWrapper .video .video-title {
  position: absolute;
  bottom: 0;
  left: 0;
  font-weight: bolder;
  font-size: 24rpx;
}
.container .course .course-section .videoWrapper .video .duration {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 24rpx;
  color: #666564;
}
.container .section {
  width: 660rpx;
  padding-bottom: 48rpx;
  border-bottom: 1rpx #E6E4E1 solid;
}
.container .section .section-subtitle.hint {
  margin-bottom: 16rpx;
  color: #999896;
  font-size: 24rpx;
}
.container .section.display {
  padding-bottom: 0;
}
.container .section.display .section-content {
  height: 192rpx;
  white-space: nowrap;
}
.container .section.display .section-content .hanzi {
  width: 100px;
  display: inline-block;
}
.container .communication {
  width: 750rpx;
  padding-left: 40rpx;
  box-sizing: b order-box;
}
.container .communication .content {
  white-space: nowrap;
  margin-top: 16rpx;
}
.container .communication .content .work {
  display: inline-block;
  border-radius: 20rpx;
  width: 298rpx;
  height: 384rpx;
  margin-right: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx -8rpx #00000010;
  margin-bottom: 40rpx;
}
.container .communication .content .work .image {
  width: 298rpx;
  height: 274rpx;
  background-color: #b3c7e6;
}
.container .communication .content .work .info {
  padding: 16rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #666564;
}
.container .communication .content .work .info .name {
  color: #1A1918;
  font-size: 28rpx;
}
.container .communication .content .work .info .icon .heart {
  width: 22rpx;
  height: 22rpx;
  background-color: #b3c7e6;
}
.container .buttonGroup {
  width: 660rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 16rpx 0;
}
.container .buttonGroup .button {
  background-color: #FFBA19;
  border-radius: 40rpx;
  padding: 20rpx 96rpx;
  font-size: 28rpx;
  color: #ffffff;
  box-shadow: 0 8rpx 16rpx -4rpx;
}

