/* miniprogram/pages/courseLearn/courseLearn.wxss */
.container {
  color: #192e4d;
}
.container .course-video {
  width: 710rpx;
  height: 360rpx;
  border: #2d5186 1px solid;
  margin-top: 20rpx;
}
.container .section {
  width: 710rpx;
}
.container .section .section-subtitle {
  font-size: 14px;
  margin: 20rpx 0;
  font-weight: bold;
}
.container .section .course-date {
  font-size: 12px;
  margin-bottom: 20rpx;
}
.container .section .course-lecturer {
  display: flex;
  flex-direction: row;
}
.container .section .course-lecturer .lecturer-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .section .course-lecturer .lecturer-item .lecturer-avatar {
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
  background-color: #799ed2;
  margin-right: 20rpx;
}
.container .section .course-lecturer .lecturer-item .lecturer-info {
  font-size: 12px;
  margin-right: 30rpx;
}
.container .section .writingDisplay {
  height: 240rpx;
  background-color: #2d5386;
}
.container .section .homeworkExercise {
  font-size: 14px;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .section .homeworkExercise .audioButton {
  padding: 20rpx;
}
.container .section .homeworkExercise .homework-video {
  width: 568rpx;
  height: 288rpx;
}
.container .section .myHomework {
  display: flex;
  justify-content: center;
}
.container .section .myHomework .homeworkButton {
  background-color: #2d5386;
  padding: 20rpx 60rpx;
  font-size: 14px;
  color: #fff;
  border-radius: 15rpx;
}
.container .section .homeworkDisplay {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.container .section .homeworkDisplay .homework-item {
  margin-bottom: 10rpx;
}
.container .section .homeworkDisplay .homework-item .item-image {
  width: 345rpx;
  height: 400rpx;
  background-color: #b3c7e6;
}
.container .section .homeworkDisplay .homework-item .item-name {
  font-size: 14px;
  font-weight: bold;
  margin: 5rpx 0;
}
.container .section .homeworkDisplay .homework-item .item-date {
  font-size: 12px;
}
.container .operationButton {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 710rpx;
  margin: 40rpx 0 20rpx 0;
}
.container .operationButton .button {
  background-color: #2d5186;
  color: #ffffff;
  font-size: 14px;
  padding: 25rpx 50rpx;
  border-radius: 15rpx;
}

