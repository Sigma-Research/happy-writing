<!--miniprogram/pages/courseLearn/courseLearn.wxml-->
<view class="container">
    <view class="course">
        <view class="infoCard">
            <view class="title">{{courseSectionPublicData.subtitle}}</view>
            <view class="date">有效期： {{date}}</view>
            <view class="statistics">课程时间：{{courseSectionPublicData.duration}}分钟  视频数：{{courseSectionPublicData.video.length}}个</view>
            <view class="lecturerWrapper">
                <view class="lecturer">
                    <image class="avatar"></image>
                    <view class="name">
                        <view class="highlight">{{lecturer[0]}}</view>
                        主讲老师
                    </view>
                </view>
                <view class="lecturer">
                    <image class="avatar"></image>
                    <view class="name">
                        <view class="highlight">{{lecturer[1]}}</view>
                        辅导老师
                    </view>
                </view>
            </view>
        </view>
        <view class="course-section">
            <view class="title">课程内容<view class="subtitle">已完成 {{video_schedule}}/{{courseSectionPublicData.video.length}}</view></view>
            <scroll-view scroll-x class="videoWrapper">
                <view class="video" bindtap="createVideo">
                    <video class="image"
                           controls="{{videoFullscreenState}}"
                           show-progress="{{videoFullscreenState}}"
                           show-fullscreen-btn="{{videoFullscreenState}}"
                           show-play-btn="{{videoFullscreenState}}"
                           show-center-play-btn="{{videoFullscreenState}}"
                           enable-progress-gesture="{{videoFullscreenState}}"
                           id="testV"
                           bindfullscreenchange="changeFullscreen"
                           bindended="videoEnd"
                           src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400"
                    ></video>
                    <view class="video-title">视频标题</view>
                    <view class="duration">视频时长：14分钟</view>
                </view>
            </scroll-view>
        </view>
        <view class="course-section">
            <view class="title">课程内容</view>
            {{courseSectionPublicData.homework}}
        </view>
        <button size="mini"
                class="table-button"
                bindtap="toHomeworkDetail"
        >开始学习</button>
    </view>
</view>
