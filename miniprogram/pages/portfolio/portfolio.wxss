/* miniprogram/pages/portfolio/portfolio.wxss */
.container.profile {
  width: 660rpx;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #fff;
  padding-top: 62rpx;
}
.container.profile .work {
  width: 314rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin-bottom: 48rpx;
  box-shadow: 0 20rpx 40rpx -8rpx #00000010;
  overflow: hidden;
}
.container.profile .work .image {
  width: 314rpx;
  height: 286rpx;
  background-color: #b3c7e6;
}
.container.profile .work .info {
  display: flex;
  flex-direction: column;
  padding: 16rpx;
}
.container.profile .work .info .wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 8rpx;
}
.container.profile .work .info .wrapper .title {
  font-size: 28rpx;
  color: #1A1918;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 196rpx;
}
.container.profile .work .info .wrapper .icon {
  width: 24rpx;
  height: 24rpx;
  background-color: indianred;
  margin: 0 10rpx;
}
.container.profile .work .info .wrapper .sum {
  font-size: 24rpx;
  color: #666564;
}
.container.profile .work .date {
  color: #666564;
  font-size: 24rpx;
}

