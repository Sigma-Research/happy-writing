<!--components/showModel.wxml-->
<view class="showModel-wrapper" catchtouchmove="preventTouchMove">
    <view class="showModel">
        <view class="title">
            {{showModelData.title}}
        </view>
        <image class="icon"  bindtap="onHidden">x</image>
        <view class="content">
            {{showModelData.content}}
            <slot></slot>
        </view>
        <view class="button-wrapper">
            <view class="button cancel" bindtap="onCancel" wx:if="{{showModelData.type === 'double'}}">
                {{showModelData.cancelText}}
            </view>
            <button open-type="{{showModelData.openType}}" class="button" bindtap="onConfirm">
                {{showModelData.confirmText}}
            </button>
        </view>
    </view>
</view>
